# =================================================================
# MFA Configuration for DeepRef
# =================================================================
# Copy this to your .env file and update with your values

# MFA Encryption Key (REQUIRED)
# Generate a new key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This is a 64-character hexadecimal string (32 bytes)
MFA_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Optional: SMS Provider Configuration (Twilio)
# Sign up at https://www.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15551234567

# Optional: SMS Provider Configuration (AWS SNS)
AWS_SNS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxx
AWS_SNS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_SNS_REGION=us-east-1

# JWT Configuration (should already exist in your .env)
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Database Configuration (should already exist)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=deepref

# Application Configuration
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for MFA codes via email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@deepref.com
