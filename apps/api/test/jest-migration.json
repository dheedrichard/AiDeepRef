{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts", "!**/*.spec.ts", "!**/node_modules/**"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "testMatch": ["**/migrations/**/*.spec.ts"],
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/../test/setup-migration-tests.ts"]
}
