{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 30000,
  "coverageDirectory": "../coverage-e2e",
  "collectCoverageFrom": [
    "../src/**/*.{ts,js}",
    "!../src/**/*.module.ts",
    "!../src/main.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.entity.ts"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
}
