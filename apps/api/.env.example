# DeepRef API Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=DeepRef API
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://deepref:deepref_password@localhost:5432/deepref
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=deepref
DATABASE_USER=deepref
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false
DATABASE_LOGGING=true
DATABASE_SYNCHRONIZE=false
DATABASE_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# API Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@deepref.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=DeepRef <noreply@deepref.com>

# AI/ML Services
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# External APIs
CROSSREF_API_URL=https://api.crossref.org
PUBMED_API_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# AWS S3 (Optional - for production file storage)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Monitoring & APM
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_CACHE=true

# Security
BCRYPT_ROUNDS=10
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your_session_secret_here
CSRF_SECRET=your_csrf_secret_here

# Application URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# Email Service Configuration
EMAIL_SERVICE=stub
# Set to 'sendgrid', 'ses', or 'smtp' when ready to use real email service

# Testing
TEST_DATABASE_URL=postgresql://deepref_test:test_password@localhost:5432/deepref_test
