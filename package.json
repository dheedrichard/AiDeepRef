{
  "name": "deepref",
  "version": "1.0.0",
  "description": "DeepRef AI Reference Verification Platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run setup:all",
    "setup:all": "npm run setup:api && npm run setup:web",
    "setup:api": "cd apps/api && npm install",
    "setup:web": "cd apps/web && npm install",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run --workspace=apps/api start:dev",
    "dev:web": "npm run --workspace=apps/web start",
    "dev:docker": "docker-compose -f infrastructure/docker/docker-compose.yml up",
    "dev:docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml up --build",
    "build": "npm run build:api && npm run build:web",
    "build:api": "npm run --workspace=apps/api build",
    "build:web": "npm run --workspace=apps/web build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "npm run --workspace=apps/api test",
    "test:api:e2e": "npm run --workspace=apps/api test:e2e",
    "test:api:cov": "npm run --workspace=apps/api test:cov",
    "test:web": "npm run --workspace=apps/web test",
    "test:web:cov": "npm run --workspace=apps/web test -- --coverage",
    "test:smoke": "npm run --workspace=apps/api test:smoke",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "npm run --workspace=apps/api lint",
    "lint:web": "npm run --workspace=apps/web lint",
    "lint:fix": "npm run lint:api -- --fix && npm run lint:web -- --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "security:scan": "npm run security:semgrep && npm run security:snyk && npm run security:audit",
    "security:semgrep": "semgrep scan --config=auto --config=p/owasp-top-ten",
    "security:snyk": "snyk test --all-projects",
    "security:audit": "npm audit --audit-level=moderate",
    "security:secrets": "gitleaks detect --verbose",
    "docker:build": "npm run docker:build:api && npm run docker:build:web",
    "docker:build:api": "docker build -f infrastructure/docker/Dockerfile.api -t deepref-api:latest .",
    "docker:build:web": "docker build -f infrastructure/docker/Dockerfile.web -t deepref-web:latest .",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f infrastructure/docker/docker-compose.yml down -v",
    "migration:create": "npm run --workspace=apps/api migration:create",
    "migration:run": "npm run --workspace=apps/api migration:run",
    "migration:revert": "npm run --workspace=apps/api migration:revert",
    "clean": "npm run clean:api && npm run clean:web && npm run clean:root",
    "clean:api": "cd apps/api && rm -rf dist node_modules",
    "clean:web": "cd apps/web && rm -rf dist node_modules .angular",
    "clean:root": "rm -rf node_modules",
    "clean:all": "npm run clean && rm -rf coverage .nyc_output",
    "typecheck": "npm run typecheck:api && npm run typecheck:web",
    "typecheck:api": "cd apps/api && tsc --noEmit",
    "typecheck:web": "cd apps/web && tsc --noEmit"
  },
  "keywords": [
    "deepref",
    "ai",
    "reference-verification",
    "academic",
    "research"
  ],
  "author": "DeepRef Team",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-security": "^1.7.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "@playwright/mcp": "^0.0.40"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}

